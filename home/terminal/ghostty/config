cursor-click-to-move = true
font-size = 12
gtk-tabs-location = bottom
gtk-wide-tabs = false
maximize = true
selection-clear-on-typing = false
window-padding-balance = true
window-padding-color = extend
window-padding-x = 4
window-padding-y = 2

# new splits
keybind = ctrl+alt+minus=new_split:down
keybind = ctrl+alt+backslash=new_split:right

keybind = alt+w=close_surface

keybind = alt+f=toggle_split_zoom
# default toggle_split_zoom keybind
keybind = ctrl+shift+enter=unbind

# goto splits
keybind = alt+k=goto_split:up
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+l=goto_split:right

# resize splits
keybind = ctrl+shift+h=resize_split:left,100
keybind = ctrl+shift+j=resize_split:down,100
keybind = ctrl+shift+k=resize_split:up,100
keybind = ctrl+shift+l=resize_split:right,100

# change tabs
keybind = ctrl+alt+h=previous_tab
keybind = ctrl+alt+l=next_tab

# disable default open-config keybind
keybind = ctrl+,=unbind

font-family = monospace
font-feature = ss05
font-style-bold = SemiBold

# when running as systemd service, don't exit instantly
quit-after-last-window-closed = true
quit-after-last-window-closed-delay = 5m


